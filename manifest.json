{
  "manifest_version": 2,
  "name": "DevLinQ",

  "version": "1.0",

  "description": "Tool to organise your coding-related search",

  "content_scripts": [{
    "matches": ["https://www.google.co.uk/*"],
    "css": ["src/static/css/style.css"],
    "js": [
          "bundle.js"
          ],
    "run_at": "document_start"
  }],

  "background": {
    "scripts": [  "src/static/js/Devlinq.js"],
    "persistent": false
  },

  "permissions": [
    "activeTab",
    "tabs",
    "https://www.google.co.uk/*"
  ],

  "browser_action": {
    "default_icon": "icon.png"
  }
}
